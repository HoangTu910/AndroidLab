<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A1B9A">

    <!-- Central Shopping Cart Icon -->
    <ImageView
        android:id="@+id/shopping_cart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_cart"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LED TV Button and Label -->
    <ImageButton
        android:id="@+id/button_led_tv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_tv"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF5722"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_led_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LED TV"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_led_tv"
        app:layout_constraintStart_toStartOf="@id/button_led_tv"
        app:layout_constraintEnd_toEndOf="@id/button_led_tv" />

    <!-- Furniture Button and Label -->
    <ImageButton
        android:id="@+id/button_furniture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_furniture"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#4CAF50"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_furniture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Furniture"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_furniture"
        app:layout_constraintStart_toStartOf="@id/button_furniture"
        app:layout_constraintEnd_toEndOf="@id/button_furniture" />

    <!-- Hotel Button and Label -->
    <ImageButton
        android:id="@+id/button_hotel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_hotel"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#2196F3"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_hotel"
        app:layout_constraintStart_toStartOf="@id/button_hotel"
        app:layout_constraintEnd_toEndOf="@id/button_hotel" />

    <!-- Flights Button and Label -->
    <ImageButton
        android:id="@+id/button_flights"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_flight"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#9C27B0"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flights"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_flights"
        app:layout_constraintStart_toStartOf="@id/button_flights"
        app:layout_constraintEnd_toEndOf="@id/button_flights" />

    <!-- Fashion Button and Label -->
    <ImageButton
        android:id="@+id/button_fashion"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_fashion"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FFC107"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_fashion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fashion"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_fashion"
        app:layout_constraintStart_toStartOf="@id/button_fashion"
        app:layout_constraintEnd_toEndOf="@id/button_fashion" />

    <!-- Offers Button and Label -->
    <ImageButton
        android:id="@+id/button_offers"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_offers"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#E91E63"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offers"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_offers"
        app:layout_constraintStart_toStartOf="@id/button_offers"
        app:layout_constraintEnd_toEndOf="@id/button_offers" />

    <!-- Mobile Button and Label -->
    <ImageButton
        android:id="@+id/button_mobile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_mobile"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#00BCD4"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_mobile"
        app:layout_constraintStart_toStartOf="@id/button_mobile"
        app:layout_constraintEnd_toEndOf="@id/button_mobile" />

    <!-- Beauty Button and Label -->
    <ImageButton
        android:id="@+id/button_beauty"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_beauty"
        android:padding="12dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#8BC34A"
        app:layout_constraintCircle="@id/shopping_cart"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="140dp" />

    <TextView
        android:id="@+id/text_beauty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beauty"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/button_beauty"
        app:layout_constraintStart_toStartOf="@id/button_beauty"
        app:layout_constraintEnd_toEndOf="@id/button_beauty" />

</androidx.constraintlayout.widget.ConstraintLayout>